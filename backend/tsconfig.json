  "compilerOptions": {
    "outDir": "build",
    "skipLibCheck": true,
    "module": "NodeNext", 
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,  
    "target": "es6",                          
    "sourceMap": true,
     "noEmit": true,
     "types": ["node"],
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"] 
}
