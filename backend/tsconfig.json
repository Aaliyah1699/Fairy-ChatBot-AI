{
  "compilerOptions": {
    "outDir": "build",
    "module": "commonjs", 
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,  
    "target": "es6",                          
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["src/components/*"] 
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"] 
}
